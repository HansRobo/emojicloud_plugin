<library path="libemojicloud_plugin">


	<class name="surfel_cloud_rviz_plugin/EmojiLaserScan"
			type="surfel_cloud_rviz_plugin::EmojiLaserScanDisplay"
			base_class_type="rviz::Display">
		<description>
			Displays laser scans as emojis.
		</description>
		<message_type>sensor_msgs/LaserScan</message_type>
	</class>


  <class name="surfel_cloud_rviz_plugin/SurfelCloud"
         type="surfel_cloud_rviz_plugin::EmojiPointCloud2Display"
         base_class_type="rviz::Display">
    <description>
      Displays point clouds as emojis.
    </description>
    <message_type>sensor_msgs/PointCloud2</message_type>
  </class>


</library>
